<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:ProCalendar.UI.Controls"
    xmlns:converters="using:ProCalendar.UI.ValueConverters"
    xmlns:data="using:ProCalendar.Core.ListDates">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///ProCalendar.UI/Colors/ColorsDictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <converters:DateTimeConverter x:Key="dateTimeConverter"/>
    <converters:DateTimeConverter2 x:Key="dateTimeConverter2"/>

    <Style TargetType="controls:ProCalendar">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="DataContext">
            <Setter.Value>
                <data:ListDates/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:ProCalendar">
                    <Grid
                        x:Name="Root"
                        Background="{TemplateBinding Background}"
                        VerticalAlignment="{TemplateBinding VerticalAlignment}"
                        HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        BorderBrush="{TemplateBinding BorderBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" BorderBrush="Gray" BorderThickness="0.5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <!--<Button
                                Margin="0"
                                Padding="0"
                                Background="White"
                                BorderBrush="Gray"
                                BorderThickness="0.5"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center">
                                <Button.Content>
                                    <TextBlock
                                        Margin="5,0"
                                        Foreground="Black"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        TextAlignment="Left"
                                        Text="{Binding CurrentDay.DateTime.Now, Mode=OneWay}"/>
                                </Button.Content>
                            </Button>-->
                            <!--<Border Grid.Row="0" Background="White" BorderBrush="Gray" BorderThickness="0.5" Height="40"/>-->
                            <!--<TextBlock Grid.Row="0" Margin="5,0" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Stretch" TextAlignment="Left"
                                     Text="{Binding CurrentDay.DateTime.Now, Mode=OneWay}"/>-->

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    Grid.Column="0"
                                    FontSize="24"
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    TextAlignment="Center"
                                    Text="{Binding CurrentDay.DateTime.Now, Converter={StaticResource dateTimeConverter2}, Mode=OneWay}"/>
                            </Grid>
                            <controls:AdaptiveGridView
                                Margin="0"
                                Grid.Row="1"
                                ColumnsCount="7"
                                RowsCount="1"
                                ItemHeight="36"
                                ItemWidth="36"
                                ItemsSource="{Binding ContentDays, Mode=OneWay}">
                                <controls:AdaptiveGridView.ItemTemplate>
                                    <DataTemplate>
                                        <ContentControl Margin="2" BorderBrush="{x:Null}" BorderThickness="0" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                TextAlignment="Center"
                                                Text="{Binding DateTime, Converter={StaticResource dateTimeConverter}}"/>
                                        </ContentControl>
                                    </DataTemplate>
                                </controls:AdaptiveGridView.ItemTemplate>
                            </controls:AdaptiveGridView>
                        </Grid>
                        <controls:AdaptiveGridView
                            x:Name="ContentRoot"
                            Margin="0"
                            Grid.Row="2"
                            ColumnsCount="7"
                            RowsCount="6"
                            ItemHeight="36"
                            ItemWidth="36"
                            ItemsSource="{Binding ContentDays, Mode=OneWay}">
                            <controls:AdaptiveGridView.ItemTemplate>
                                <DataTemplate>
                                    <controls:CalendarToggleButton HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                                        <controls:CalendarToggleButton.Content>
                                            <TextBlock
                                                FontSize="12"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Stretch"
                                                TextAlignment="Center"
                                                Text="{Binding DateTime.Day}"/>
                                        </controls:CalendarToggleButton.Content>
                                    </controls:CalendarToggleButton>
                                </DataTemplate>
                            </controls:AdaptiveGridView.ItemTemplate>
                        </controls:AdaptiveGridView>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
